<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorDeepBlue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/bmi_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/arimo_bold"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:letterSpacing="0.04"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Please fill your details here:"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weight"
            android:tint="@color/colorWhite"
            android:contentDescription="weight"/>
        <View
            android:layout_width="1.5dp"
            android:layout_height="28dp"
            android:background="@color/colorGray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your weight (in kgs)"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:letterSpacing="0.1"
                android:includeFontPadding="false"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wightEDTX"
                android:textSize="15sp"
                android:hint="65.5"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGray"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:importantForAutofill="no"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_man_24"
            android:backgroundTint="@color/colorDeepBlue"
            android:contentDescription="height"/>
        <View
            android:layout_width="1.5dp"
            android:layout_height="28dp"
            android:background="@color/colorGray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your height (in cms)"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:letterSpacing="0.1"
                android:includeFontPadding="false"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/heightEDTX"
                android:textSize="15sp"
                android:hint="175.5"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGray"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:importantForAutofill="no"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorGray"/>
    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue"
        android:fontFamily="sans-serif-black"
        android:text="CALCULATE BMI"
        android:padding="15dp"
        android:letterSpacing="0.1"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"/>
</LinearLayout>