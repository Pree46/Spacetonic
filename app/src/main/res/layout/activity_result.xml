<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerR"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|start"
    android:background="@drawable/green_bg"
    android:paddingStart="30dp"
    android:paddingEnd="2dp"
    android:paddingBottom="30dp"
    android:orientation="vertical"
    tools:context=".ResultActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:text="Your BMI is: "
            android:textSize="30sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/bmiValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:text="26.5"
            android:textSize="30sp"
            android:textColor="@color/colorDesatblue"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bmiFlagImageView"
            android:src="@drawable/correct"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmiLabelTv"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorBlack"
            android:text="You have a Normal Weight"
            android:letterSpacing="0.04"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/commentTv"
            android:text="Here are some advices to keep your weight normal"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/advice1IMG"
                android:layout_marginEnd="16dp"
                android:src="@drawable/healthy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow a balanced healthy diet"
                android:id="@+id/advice1TXT"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:letterSpacing="0.1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/advice2IMG"
                android:layout_marginEnd="16dp"
                android:src="@drawable/sleep"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take care of your sleep cycle"
                android:id="@+id/advice2TXT"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:letterSpacing="0.1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/advice3IMG"
                android:layout_marginEnd="16dp"
                android:src="@drawable/yoga"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do exercise and yoga regularly to keep yourself healthy"
                android:id="@+id/advice3TXT"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:letterSpacing="0.1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>